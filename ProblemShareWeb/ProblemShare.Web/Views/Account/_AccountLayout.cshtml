<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@ViewBag.Title</title>

        <!-- Add CSS Here -->
        @Styles.Render("~/Content/materialadmin")
    </head>

    <body>
        <canvas id="bgCanvas" style="position: absolute; width: 100%; height: 100%;"></canvas>
        <div class="login-content">
            @RenderBody()
        </div>

        <!-- Scripts -->
        @Scripts.Render("~/bundles/app")
        <script type="text/javascript" src="~/Scripts/asynchelpers.js"></script>
        <script type="text/javascript">
            $(() => $("#bgCanvas").backgroundAnimation(100, 35, 50, "#FF0000", "#FFEB3B"));
        </script>
        @RenderSection("scripts", false)
    </body>
</html>